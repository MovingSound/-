<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gv_error"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/register_bg"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:enabled="true"
        android:gravity="center"
        android:text="注册您的账号"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="15dp"
        android:textSize="30sp" />


    <TableLayout
        android:layout_width="380dp"
        android:layout_height="280dp"
        android:layout_marginTop="300dp"
        android:gravity="left">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:enabled="true"
                android:paddingLeft="62dp"
                android:text="用户名："
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/textview_border"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:enabled="true"
                android:text="密码："
                android:paddingLeft="80dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_border"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/password2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:enabled="true"
                android:text="再次输入:"
                android:paddingLeft="50dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_psw_again"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_border"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:enabled="true"
                android:text="性别："
                android:paddingLeft="65dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/r"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="女"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="男"
                    android:textColor="#FFFFFF" />
            </RadioGroup>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/register_protocol_checkbox_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="510dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/register_protocol_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />
        <TextView
            android:id="@+id/register_protocol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="已同意用户协议"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/button2"
        android:text="注   册"
        android:textSize="17sp"
        android:layout_marginTop="200dp"
        android:textAllCaps="false"
        android:textColor="#252523"
        android:textStyle="bold" />

</FrameLayout>