<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".Music_Activity"
    android:gravity="center"
    android:orientation="vertical">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/start"
        android:layout_width="412dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_music"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_music"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="170dp"
            android:src="@mipmap/music0"/>
    </LinearLayout>
    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌曲名"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="100dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>
    <SeekBar
        android:id="@+id/sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="3.4dp"
        android:minHeight="3.4dp"
        android:layout_marginTop="470dp"
        android:progressDrawable="@drawable/jindutiao_color"
        android:thumb="@mipmap/dxin"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="485dp">
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="00:00"/>
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF"
            android:text="00:00"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="40dp"
        >
        <ImageButton
            android:id="@+id/pre_song2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/pre_song2"/>

        <ImageButton
            android:background="@drawable/bofangqi"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:id="@+id/pause"/>

        <ImageButton
            android:id="@+id/next_song2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/next_song2"/>
    </LinearLayout>
    <Button
        android:id="@+id/fanhui1"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="返回"
        android:textSize="17sp"
        android:layout_marginTop="630dp"
        android:layout_marginLeft="130dp"
        android:textColor="#000000"
        android:background="#EEFCFF"
        />

</FrameLayout>