<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".frame_1">

    <TextView
        android:id="@+id/pic_chose_t1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/qq"
        android:textColor="#050505"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pic_chose_t2"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:padding="15dp"
        android:text="今天的天气很适合运动哦(#^.^#)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />

    <Button
        android:id="@+id/pic_chose_t3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/heartrate" />
    <Button
        android:id="@+id/pic_chose_t4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/actitity" />
    <Button
        android:id="@+id/pic_chose_t5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/music" />
</LinearLayout>