<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="false"><!--没点击按钮的时候-->
        <shape android:shape="rectangle"><!--按钮形状-->
            <solid android:color="#FFFFFF" /><!--按钮背景填充色-->
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimaryDark" /><!--按钮边框-->
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>

    <!--当点击按钮的时候变为红色-->
    <item android:state_activated="true" ><!--点击按钮的时候-->
        <shape android:shape="rectangle"><!--按钮形状-->
            <solid android:color="#FEEFEF" /><!--按钮背景填充色-->
            <stroke
                android:width="1dp"
                android:color="#FA6B6B" /><!--按钮边框-->
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>






</selector>
